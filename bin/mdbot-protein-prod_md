#!/bin/bash

set -e

WORKDIR=$(pwd)

# Processing options & parameters with getopts
while getopts :d:s: opt
do
    case "$opt" in
        d) WORKDIR=$OPTARG ;;
        s) SYSTEM=$OPTARG ;;
        *) echo "Unknown option: $opt" ;;
    esac
done

shift $[ $OPTIND - 1 ]
for param in "$@"
do
    echo "Unknown parameter: $param"
done

cd $WORKDIR

cp "${BASH_SOURCE%/*}/../share/assets/md_parameters/md_prot.mdp" md.mdp
gmx grompp -f md.mdp -c npt.gro -t npt.cpt -p topol.top -n index.ndx -o md_0_10.tpr

start=$(date +%s)

gmx mdrun -deffnm md_0_10

end=$(date +%s)
pass=$(echo "$end - $start" | bc)

echo "Production MD complete. Congratulations!"
awk -v t=$SECONDS 'BEGIN{printf "Elapsed Time (HH:MM:SS): %d:%02d:%02d\n", t/3600%24, t/60%60, t%60}'