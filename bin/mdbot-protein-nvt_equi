#!/bin/bash

set -e

WORKDIR=$(pwd)

# Processing options & parameters with getopts
while getopts :d:s: opt
do
    case "$opt" in
        d) WORKDIR=$OPTARG ;;
        s) SYSTEM=$OPTARG ;;
        *) echo "Unknown option: $opt" ;;
    esac
done

shift $[ $OPTIND - 1 ]
for param in "$@"
do
    echo "Unknown parameter: $param"
done

cd $WORKDIR

cp "${BASH_SOURCE%/*}/../share/assets/md_parameters/nvt_prot.mdp" nvt.mdp
printf 'q\n' | gmx make_ndx -f em.gro
gmx grompp -f nvt.mdp -c em.gro -r em.gro -p topol.top -n index.ndx -o nvt.tpr

start=$(date +%s)

gmx mdrun -deffnm nvt

end=$(date +%s)
pass=$(echo "$end - $start" | bc)

echo "NVT equilibration complete. Congratulations!"
awk -v t=$SECONDS 'BEGIN{printf "Elapsed Time (HH:MM:SS): %d:%02d:%02d\n", t/3600%24, t/60%60, t%60}'